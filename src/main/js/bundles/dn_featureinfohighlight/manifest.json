{
    "name": "dn_featureinfohighlight",
    "version": "2.0.2-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-featureinfo-highlight",
    "dependencies": {
        "esri": "^4.5.0"
    },
    "components": [
        {
            "name": "FeatureHighlightFactory",
            "instanceFactory": true,
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_drawGeometryHandler",
                    "providing": "dn_featureinfohighlight.DrawGeometryHandler"
                }
            ]
        },
        {
            "name": "DrawGeometryHandler",
            "provides": "dn_featureinfohighlight.DrawGeometryHandler",
            "properties": {
                "DrawGeometryHandler": {
                    "polygonStyle": {
                        "color": [0, 255, 255, 0.25],
                        "style": "solid",
                        "outline": {
                            "color": [0, 0, 0, 1],
                            "width": 0.2,
                            "style": "solid"
                        }
                    },
                    "pointStyle": {
                        "color": [0, 255, 255, 0.25 ],
                        "angle": 0,
                        "xoffset": 0,
                        "yoffset": 0,
                        "size": 12,
                        "style": "circle",
                        "outline": {
                            "color": [0, 0, 0, 1],
                            "width": 0.75,
                            "style": "solid"
                        }
                    },
                    "polylineStyle": {
                        "color": [0, 255, 255, 1],
                        "style": "solid",
                        "width": 0.75
                    }
                }
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        }
    ]
}
